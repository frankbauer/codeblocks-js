@import './quasar.variables.styl'

span[is-code], pre[is-code]
    color: black
    border-radius: 5px 
    padding: 0 4px 2px 4px
    margin: 0 1px 0 2px
    background-color: white
    box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2)
    font-weight: bold
    border-style: none

pre[is-code]
    border-radius: 0px
    width: fit-content
    margin: 7px 0px 8px 0px 
    padding: 4px 8px 6px 8px